package 변수및자료형;

// 도구를 꺼내올 때는 반드시 어디에서 꺼낼 지 import 구문을 작성
// ---> 집적 작성하기보다 에러에 마우스 올려서 해결
import java.util.Scanner;

public class Ex01입출력 {

	public static void main(String[] args) {
		// 주석 = Comment : 코드에 영향을 끼치지 않는 메모
		// 단축키 
		// 1) 글자 크기 조절 : Ctrl + -
		// 2) 한줄 삭제 : Ctrl D
		// 3) 다중 Import 빨간줄 뜨는데 마우스 올리고사용 : Ctrl Shift O
  		// 4) Run : Ctrl F11
		// 5) 출력문 : syso 에 Ctrl Spacebar
		
		
		// 1. 출력문 
		// ----> () 안쪽에 작성 문자는 " " 추가 
		System.out.println("Hello world!!");
		System.out.println("주우건");
		System.out.println(1234);
		
		// 2. 입력문 
		// 2-1) 입력받는 도구 꺼내오기
		Scanner sc = new Scanner(System.in);
		// 개행(줄바꿈) 을 없에러면 prinln 에서 ln 만 지우기(아래 예시)
		System.out.print("글자를 입력하시오>>");
		 
		// 2-2) 입력받기 
		// 입력시 결과창 텍스트입력가능
		sc.next();
		sc.next int ();
		
		
	}

}
