package 단순if문;

import java.util.Scanner;

public class Ex02단순if문예제 {

	public static void main(String[] args) {
		// 입력도구
		Scanner sc = new Scanner(System.in);
		// 정수를 입력 출력하기
		System.out.print("정수를 입력하세요 : ");
		// 숫자 입력하기
		int num1 = sc.nextInt();
		// 계산식
		if(num1%3 + num1%5 == 0) 
		{ System.out.println("3과 5의 배수입니다");}
		// (num % 3 == 0 && num % 5 == 0) <--- AND 사용 방법
		
		
		
		
		
		
		
		
		
		
		
		
	
	}

}
